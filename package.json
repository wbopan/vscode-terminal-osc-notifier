{
    "name": "vscode-terminal-osc-notifier",
    "displayName": "Terminal Notification",
    "description": "Parse Ghostty-style OSC notifications (OSC 9 / OSC 777;notify;title;body) from integrated terminals and send OS/VS Code notifications. Click to focus the originating terminal tab.",
    "icon": "images/icon.png",
    "publisher": "wenbopan",
    "version": "0.0.1",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wbopan/vscode-terminal-osc-notifier.git"
    },
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "extensionKind": [
        "ui"
    ],
    "activationEvents": [
        "*",
        "onUri"
    ],
    "contributes": {
        "configuration": {
            "title": "Terminal Notification",
            "properties": {
                "oscNotifier.preferOsNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Send native OS notifications via node-notifier. If false, only VS Code notifications are shown."
                },
                "oscNotifier.showVsCodeNotification": {
                    "type": "boolean",
                    "default": true,
                    "description": "Also show a VS Code notification with a 'Focus Terminal' action."
                },
                "oscNotifier.ignoreProgressOsc9_4": {
                    "type": "boolean",
                    "default": true,
                    "description": "Ignore OSC 9;4 (progress reports) to avoid conflicts with Ghostty's behavior."
                }
            }
        },
        "commands": [
            {
                "command": "oscNotifier.enable",
                "title": "Notification: Enable"
            },
            {
                "command": "oscNotifier.disable",
                "title": "Notification: Disable"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -w -p ."
    },
    "dependencies": {
        "node-notifier": "^10.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.93.0",
        "typescript": "^5.6.3"
    }
}
