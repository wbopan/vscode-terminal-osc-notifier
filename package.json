{
    "name": "vscode-terminal-osc-notifier",
    "displayName": "Terminal Notification for VS Code",
    "description": "Parse Ghostty-style OSC notifications (OSC 9 / OSC 777;notify;title;body) from integrated terminals and send OS/VS Code notifications. Click to focus the originating terminal tab.",
    "icon": "images/icon.png",
    "publisher": "wenbopan",
    "version": "0.1.2",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wbopan/vscode-terminal-osc-notifier.git"
    },
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "extensionKind": [
        "ui"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onUri"
    ],
    "keywords": [
        "terminal",
        "notification",
        "osc",
        "osc9",
        "osc777",
        "tmux",
        "ghostty"
    ],
    "contributes": {
        "configuration": {
            "title": "Terminal Notification",
            "properties": {
                "terminalNotification.preferOsNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Send native OS notifications via node-notifier. If false, only VS Code notifications are shown."
                },
                "terminalNotification.showVsCodeNotification": {
                    "type": "boolean",
                    "default": true,
                    "description": "Also show a VS Code notification with a 'Focus Terminal' action."
                },
                "terminalNotification.ignoreProgressOsc9_4": {
                    "type": "boolean",
                    "default": true,
                    "description": "Ignore OSC 9;4 (progress reports) to avoid conflicts with Ghostty's behavior."
                }
            }
        },
        "commands": [
            {
                "command": "terminalNotification.enable",
                "title": "Notification: Enable"
            },
            {
                "command": "terminalNotification.disable",
                "title": "Notification: Disable"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run typecheck && npm run build",
        "build": "esbuild src/extension.ts --bundle --platform=node --format=cjs --target=node18 --external:vscode --outdir=dist && node scripts/copy-notifier-assets.js",
        "typecheck": "tsc --noEmit",
        "watch": "node scripts/copy-notifier-assets.js && esbuild src/extension.ts --bundle --platform=node --format=cjs --target=node18 --external:vscode --outdir=dist --watch"
    },
    "dependencies": {
        "node-notifier": "^10.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "@types/vscode": "^1.93.0",
        "esbuild": "^0.23.1",
        "typescript": "^5.6.3"
    }
}
